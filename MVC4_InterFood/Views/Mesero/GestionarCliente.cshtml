
@{
    ViewBag.Title = "Cliente";
    Layout = "~/Views/Shared/_LayoutMesero.cshtml";
}

<!-- page content -->
<div class="right_col" role="main" ng-controller="MeseroController">

    <!-- MODAL DE CONFIRMACIÓN PARA RESET DATOS -->
    <div class="modal fade confirmarResetPedido" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel2">Confirmar acción</h4>
                </div>
                <div class="modal-body">
                    <h4>¿ Esta seguro de cancelar ?</h4>
                    <p>Tenga en cuenta que al confirmar borrara todos los datos relacionados con el pedido actual.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-bottom: 0;">Cancelar</button>
                    <button type="button" ng-click="CancelarPedido()" data-dismiss="modal" class="btn btn-primary">Aceptar</button>
                </div>

            </div>
        </div>
    </div>


    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Gestionar Cliente </h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" ng-model="txtBucarCliente" placeholder="Buscar cliente">
                        <span class="input-group-btn">
                            <button class="btn btn-default" ng-click="ConsultarCliente()" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>


        </div>
        <div class="clearfix">
        </div>

        <div class="row">

            <!-- Registro cliente -->
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Registrar Cliente</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li data-toggle="modal" data-target=".confirmarResetPedido" id="cancelarPedido" ng-show="HayPedidoActivo">
                                <a data-toggle="tooltip" data-placement="bottom"
                                   data-original-title="Hay un pedido activo en estos momentos, clic para cancelarlo.">
                                    <i class="fa fa-trash"></i>
                                    Cancelar pedido
                                </a>
                            </li>

                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />

                        <form class="form-horizontal form-label-left" name="FormRegCliente" id="FormRegCliente" ng-submit="GestionarCliente(FormRegCliente , DatosFormRegCliente)" ng-validate="V_FormRegCliente">

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-3">Nombre</label>
                                <div class="col-md-9 col-sm-9 col-xs-9">
                                    <input type="text" ng-model="DatosFormRegCliente.nombre" class="form-control" name="nombre" maxlength="45" required />
                                    <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-3">Apellido</label>
                                <div class="col-md-9 col-sm-9 col-xs-9">
                                    <input type="text" ng-model="DatosFormRegCliente.apellido" class="form-control" name="apellido" maxlength="45" required />
                                    <span class="fa fa-male form-control-feedback right" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-3">Cédula</label>
                                <div class="col-md-9 col-sm-9 col-xs-9">
                                    <input type="text" ng-readonly="esModificar" ng-model="DatosFormRegCliente.cedula" class="form-control" name="cedula" min="1" maxlength="25" required />
                                    <span class="fa fa-shield form-control-feedback right" aria-hidden="true"></span>
                                </div>

                            </div>

                            <div class="ln_solid"></div>

                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-3">
                                    <button ng-click="ResetForm()" ng-show="esModificar" class="btn btn-primary">Cancelar</button>
                                    <button type="submit" ng-hide="esModificar" class="btn btn-success">Registrar</button>
                                    <button type="submit" ng-show="esModificar" class="btn btn-warning">Modificar</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <!-- /Registro cliente -->

        </div>

    </div>


</div>
<!-- /page content -->

@section scripts{

    <script src="~/Assets/js/angular/fabrica.js"></script>
    <script src="~/Assets/js/angular/controllers/MeseroController.js"></script>
    <script src="~/Assets/js/angular/dirPagination.js"></script>
}

